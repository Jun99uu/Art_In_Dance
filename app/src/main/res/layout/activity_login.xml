<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LoginActivity"
    android:background="@drawable/gradient">

    <ImageView
        android:id="@+id/cuteleaf1"
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:layout_constraintTop_toBottomOf="@id/artindance"
        app:layout_constraintBottom_toTopOf="@id/logininfo"
        android:layout_marginBottom="90dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="30dp"
        android:layout_marginTop="115dp"
        android:src="@drawable/ic_launcher_background" />

    <ImageView
        android:id="@+id/moveleaf"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="180dp"
        android:layout_marginTop="35dp"
        android:src="@drawable/ic_launcher_background" />


    <TextView
        android:id="@+id/artindance"
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:text="Art In\nDance"
        android:textSize="63dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:fontFamily="@font/vitro_core"
        android:letterSpacing="-0.03"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/logininfo"/>

    <LinearLayout
        android:id="@+id/logininfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintTop_toBottomOf ="@id/artindance"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <EditText
            android:id="@+id/et_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border_round"
            android:hint="@string/hint_id"
            android:fontFamily="@font/vitro_pride"
            android:inputType="textCapWords"
            android:padding="10dp"
            android:textColor="@color/input_register"
            android:textColorHint="@color/input_register_hint" />

        <EditText
            android:id="@+id/et_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border_round"
            android:hint="@string/hint_password"
            android:fontFamily="@font/vitro_pride"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textColor="@color/input_register"
            android:textColorHint="@color/input_register_hint" />

        <CheckBox
            android:id="@+id/savecheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="아이디 저장하기"
            android:fontFamily="@font/vitro_pride"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:paddingBottom="10dp" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/border_round"
            android:backgroundTint="@color/art_green"
            android:text="@string/btn_login"
            android:fontFamily="@font/vitro_pride"
            android:textSize="16dp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_round"
            android:backgroundTint="@color/pastel_strong_pink"
            android:fontFamily="@font/vitro_pride"
            android:textSize="16dp"
            android:text="@string/btn_register"
            android:textColor="@color/white" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>