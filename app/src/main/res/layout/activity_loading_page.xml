<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoadingPage"
    android:background="@drawable/gradient">

    <ImageView
        android:id="@+id/startloading"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/loadinghi"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="180dp"/>

    <TextView
        android:id="@+id/loadinghi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="어서오세요,\nArt In Dance입니다.\n잠시만 기다려주세요!"
        android:gravity="center"
        android:fontFamily="@font/yui"
        android:textColor="@color/white"
        android:textSize="38sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/startloading"
        />

</androidx.constraintlayout.widget.ConstraintLayout>